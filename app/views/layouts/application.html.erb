<!DOCTYPE html>
<html>
<head>
  <title>:: Job 4 All ::</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'header' %>

<% if current_user %>
<div class="row">
  <div class="col-md-3">
    <section class="leftbar">
      <%= render 'leftsidebar' %>
    </section>
  </div>
  <% end %>
  <div class="container">
    <div class="col-md-12">
      <%= render 'messages' %>
      <%= yield %>
      
    </div>
  </div>
  
</div>
<%= render 'footer' %>

</body>
</html>
